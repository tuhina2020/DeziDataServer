{
  "apps" : [
    {
      "name": "server",
      "script": "server.js",
      "exec_mode": "cluster",
      "instances": 1,
      "args": ["--production"],
      "max_memory_restart": "1536M",
      "node_args": ["--max-old-space-size=2048"],
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "kill_timeout": 5500
    }
  ]
}